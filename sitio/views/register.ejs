<%-include('./partials/head') %>

<body class="registro-login">

  <%-include('./partials/header') %>

  <main>

    <div class='contenedor'>
      <form action="" method="POST" id="form-register" autocomplete="off" novalidate>
        <h2 class="fuente2"> Registrarse</h2>
        <!--fullName-->
        <div class='container-input'>
          <label for="Nombre y Apellido">Nombre y Apellido</label>
          <span id="error-name" class="small text-danger"><%= locals.errores && errores.name ? errores.name.msg : null %> </span>
          <span id="info-name" class="small text-info"></span>
          <input class="form-control" type="text" id="name" name="name">
        </div>
        <!--userName-->
        <div class='container-input'>
          <label for="username">Nombre de usuario</label>
          <span class="small text-danger"><%= locals.errores && errores.username ? errores.username.msg : null %> </span>
          <input type="text" id="username" name="username" ;>
        </div>
        <!--Email-->
        <div class='container-input'>
          <label for="email">Email</label>
          <span id="error-email" class="small text-danger"><%= locals.errores && errores.email ? errores.email.msg : null %> </span>
          <span id="info-email" class="small text-info"></span>
          <input type="email" id="email" name="email" >
        </div>        
        
        <!--Contrase単a-->
        <div class='container-input'>
          <label for="password">Contrase単a</label>
          <span class="small text-danger" id="error-password"><%= locals.errores && errores.password ? errores.password.msg : null %> </span>
          <span id="info-password" class="small text-info"></span>
          <input type="password" id="password" name="password" minlength="8">
        </div>

        <!--generador contrase単as -->
        <div class="conteiner">

          <h2 class="sugerencia">Contrase単a sugerida</h2>
          <div class="el">
          
          <input type="text" placeholder="Password" class="inp" id="password"/>
          <div class="botons">
             <button type="button" onclick="copytext()" title="copy">
          <i class="fa fa-copy"></i> </button>
          <button type="button" onclick="generatePassword()" title="Generate">
          <i class="fa-solid fa-wand-magic"></i></button>
          </div>
         
          </div>
          </div>
          <div class="info">Copiado!</div>
          
        <!--Botones-->
        <div class='container-buttons'>
          <button type="submit"> Enviar </button>
        </div>
      </form>
    </div>

  </main>


  <%-include('./partials/footer') %>
  <script src="/javascript/password.js">
    </script>
    <script src="/javascript/registerValidator.js"></script>
</body>

</html>


