<%-include('./partials/head') %>

<body class="registro-login">

  <%-include('./partials/header') %>

  <main>

    <div class='contenedor'>
      <form class="form" id="form-register" action="" method="POST" autocomplete="off" novalidate >        <h2 class="fuente2"> Registrarse</h2>
        <!--fullName-->
        <div class='container-input'>
          <label for="Nombre y Apellido">Nombre y Apellido</label>
          <input class="form-control" type="text" id="name" name="name" placeholder="Ej: javier cavalero">
        </div>
        <span id="error-name" class="small text-danger"><%= locals.errores && errores.name ? errores.name.msg : null %> </span>
          <span id="info-name" class="small text-danger"></span>
        <!--userName-->
        <div class='container-input'>
          <label for="username">Nombre de usuario</label>
          <input class='form-control' type="text" id="username" name="username" placeholder="nombre de usuario">
        </div>
        <span id="error-username" class="small text-danger"><%= locals.errores && errores.username ? errores.username.msg : null %> </span>
        <span id="info-username" class="small text-danger"></span>
        <!--Email-->
        <div class='container-input'>
          <label for="email">Email</label>
          <input class='form-control' type="email" id="email" name="email" placeholder="ej: example@gmail.com">
        </div>       
          <span id="error-email" class="small text-danger"><%= locals.errores && errores.email ? errores.email.msg : null %> </span>
          <span id="info-email" class="small text-danger"></span>
        
        <!--Contraseña-->
        <div class='container-input'>
          <label for="password">Contraseña</label>
          <input class='form-control' type="password" id="password" name="password" placeholder="contraseña" minlength="8" >
          <a class="btn btn-outline-dark ms-2" type="button" id="watch" style="width:50px">
            <i class="fa fa-eye"></i>
        </a>
        </div>
          <span class="small text-danger" id="error-password"><%= locals.errores && errores.password ? errores.password.msg : null %> </span>
          <span id="info-password" class="small text-danger"></span>

        <!--generador contraseñas -->
        <div class="conteiner">

          <div class="el">
          
          
          <div class="botons">
            

          <button type="button" onclick="generatePassword()" title="Generate">
          Contraseña sugerida</button>
          </div>
         
          </div>
          </div>
          <div class="box-form">
            <span id="error-empty" class="small text-danger"></span>
        </div>
          
        <!--Botones-->
        <div class='container-buttons mx-3'>
          <button type="button" id='cancelar' onclick="location.href='/'"> Cancelar </button>
          <button type="submit" id='enviar'> Registrarme </button>
         
        </div>
      </form>
    </div>

  </main>


  <%-include('./partials/footer') %>
  <script src="/javascript/password.js">
    </script>
    <script src="/javascript/registerValidator.js"></script>
</body>

</html>


