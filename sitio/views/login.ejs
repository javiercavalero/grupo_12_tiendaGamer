<%-include('./partials/head') %>



<body class="registro-login">

  
  <%-include('./partials/header') %>


  <main>

 

    <div class='contenedor'>
      <form class="form" id="form-login" action="" method="POST" >
        <h2 class="fuente2"> Ingresá</h2>
        <!--email-->
        <div class='container-input'>
          <input class="form-control" type="email" placeholder="Email" name="email" id="email" >
          <span id="error-email" class="small text-danger"></span>
        </div>
        <!--contraseña-->
        
        <div class='container-input'>
          
          <input class="form-control" type="password" placeholder="Contraseña" name="password" id="password" >
         <span id="error-password" class="small text-danger"></span> 
         <a class="btn btn-outline-dark ms-2" type="button" id="watch" style="width:50px" >
            <i class="fa fa-eye"></i>
        </a>
        
        </div>
        
        <div > 
          <span class="text-danger small ms-2 fs-32px"><%= locals.errores && errores.email ? errores.email.msg : null%> </span>
        </div>
        <div class="box-form">
          <span id="error-empty" class="small text-danger"></span>
      </div>
        <input type="checkbox" id="remember" name="remember" id="remember">
        <label for="remember">Recordarme</label>

        
        <!--Botones-->
        <div class='container-buttons'>
           <button type="button" id='cancelar' onclick="location.href='/'"> Cancelar </button>
          <button type="submit"> Ingresar </button>
        </div>
       <div class="d-flex mt-3">
         <h6>No tenes una cuenta?</h6>   
         <a href="/users/register">Registrate</a>
       </div> 
      </form>

      
    </div>

  </main>

  

  <%-include('./partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
  <script src="/javascript/loginValidator.js ">
  </script>

</body>

</html>