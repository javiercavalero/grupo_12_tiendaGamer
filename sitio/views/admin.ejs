<!--head-->
<%- include('./partials/head') %> 
<body>
    <!--HEADER-->
    <%- include('./partials/headerAdmin') %> 
<main>
   <div class="row">
<div class= "col-12 col-lg-10 mx-auto shadow">
  <div class="card">
<div class="card-header">
  <%= title %>
  <a class="navbar-brand" href="/products/create">CREAR</a>
</div>
<div class="card-body">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Imagen</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Acciones</th>
      </tr>
    </thead>
    <tbody>
  <% products.forEach((product,index) => {     %>

        <tr>
          <th scope="row"><%= index + 1 %>   </th>    
        <td> <img width= "100" src="/images/products/<%= product.image %>" alt="">  </td>
            <td><%= product.name %> </td>
            <td><%= product.price %> </td>
           <td>

            <a href="/products/edit/<%= product.id %>" class="btn btn-sm btn-success" style="width: 35px;"><i class="fas fa-edit"></i></a>
             
             <form action="/products/destroy/<%= product.id %>?_method=DELETE" method="POST">

             <button class="btn btn-sm btn-danger" type="submit" style="width: 35px;" >   <i class="fas fa-trash"></i> </button>
           </form>
           </td>
        </tr>
      <% } )%>
      
      
      
  </table>



</div>
  </div>
  
</div>

   </div> 

  
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-/bQdsTh/da6pkI1MST/rWKFNjaCP5gBSY4sEBT38Q/9RBh9AH40zEOg7Hlq2THRZ" crossorigin="anonymous"></script>
</body>
</html>