                    <li><a class="dropdown-item" href="#"> eliminar</a></li>
                    <li>
                      <hr class="dropdown-divider">
                    </li>
                  </ul>
                </li>
              </ul>
              <form class="d-flex">
                <input class="form-control me-2" type="BUSCAR PRODUCTOS" placeholder="BUSCAR PRODUCTOS" aria-label="BUSCAR PRODUCTOS">
                <button class="btn btn-outline-info" type="submit">BUSCAR</button>
              </form>
            </div>
          </div>
        </div>
      </nav>

    </header>
    
<main>
   <div class="row">
<div class= "col-12 col-lg-10 mx-auto shadow">
  <div class="card">
<div class="card-header">
  <%= title %>

</div>
<div class="card-body">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Imagen</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Categoría</th>
      </tr>
    </thead>
    <tbody>

      <% products.forEach((product,index) => {     %>

        <tr>
          <th scope="row"><%= index + 1 %>   </th>    
        <td> <img width= "100" src="/images/<%= product.image %>" alt="">  </td>
            <td><%= product.name %> </td>
            <td><%= product.price %> </td>
           
        </tr>


      <% } )%>
      
      
  </table>



</div>
  </div>
  
</div>

   </div> 

  
</main>

