<%- include('./partials/head',{title: "Zukuna store"}) %>

  <body class="home">
    <%- include('./partials/header') %>
      <main>
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
              aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
              aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
              aria-label="Slide 3"></button>
          </div>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="/images/banner/1.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/images/banner/2.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="/images/banner/3.png" class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>

        
        <h3>Destacados de la semana</h3>
        <a href="/products/list"><h4>Listado de productos</h4></a>
        <div class="conteiner">
          <% products.forEach(product=> { %>
            <div class="img-destacadas">
              <div class="img1"><a href="/products/detail/<%= product.id %> "><img src="/images/products/<%= product.image %> "
                    alt=""></a>

                <% if (product.discount > 0) { %>
                      <h2>$<%= toDiscount(product.price, product.discount)%></h2>
                      <span><%= product.discount %> % OFF</span>
                <% } else { %>
                  <h2>$<%= toThousand(product.price)%></h2>
                  <% } %>
                <h2>
                  <%= product.name %>
                </h2>
                <div class="carrito-compra"><a href="/carrito"><i class="fas fa-shopping-cart"></i>
                  </a>
                </div>
              </div>
            </div>
            <% }) %>
        </div>



        <h3>Â¿Que estas buscando?</h3>
        <div class="icons">
          <div class="headphones"><a href=""><i class="fas fa-headphones"></i></a></div>
          <div class="game"><a href=""><i class="fas fa-gamepad"></i></a></div>
          <div class="mouse"><a href=""><i class="fas fa-mouse"></i></a></div>
          <div class="sd-card"><a href=""><i class="fas fa-sd-card"></i></a></div>
          <div class="laptop"><a href=""><i class="fas fa-desktop"></i></a></div>
          <div class="usb"><a href=""><i class="fab fa-usb"></i></a></div>
          <div class="mobile"><a href=""><i class="fas fa-mobile-alt"></i></a></div>
          <div class="microfono"><a href=""> <i class="fas fa-microphone"></i></a></div>
        </div>


      </main>
      <%- include('./partials/footer') %>
        <%- include('./partials/scripts') %>
  </body>

  </html>